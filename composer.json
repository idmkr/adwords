{
	"name": "idmkr/adwords",
	"type": "platform-extension",
	"description": "AdWords PHP API abstraction layer",
	"authors": [
		{
			"name": "IDMKR",
			"email": "team@idmkr.io"
		}
	],
	"require": {
		"php": ">=7.0",
		"nikolajlovenhardt/laravel-google-ads": "^0.0.5@beta"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"codeclimate/php-test-reporter": "dev-master",
		"phpmd/phpmd" : "1.4.*",
		"mockery/mockery": "~0.9.4"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"Idmkr\\Adwords\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"LaravelGoogleAdsTests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
